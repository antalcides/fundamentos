   \newcommand{\notatheorem}[3][]{%
           \newcounter{#2}[section]
                     \def\nombre@c{#3}
                                  \newenvironment{#2}[1]{%
                    \refstepcounter{#2}
                     \def\titulo@c{\nombre@c\ \thesection .\csname the#2\endcsname}
                           \begin{notafancy}{#1, titlebox=\titulo@c  
                           }      
                   ##1
                      \end{notafancy}     }%
               {
               }
         
          
           }

